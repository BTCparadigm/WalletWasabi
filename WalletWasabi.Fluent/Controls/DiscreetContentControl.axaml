<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:WalletWasabi.Fluent.Controls">
  <Design.PreviewWith>
    <controls:DiscreetContentControl />
  </Design.PreviewWith>

  <Style Selector="controls|DiscreetContentControl">
    <Setter Property="Template">
      <ControlTemplate>
        <Panel Background="Transparent">
          <ContentPresenter Name="PART_Content"
                            IsVisible="{TemplateBinding IsContentVisible}"
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Content="{TemplateBinding Content}"
                            VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                            HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" />
          <Panel Name="PART_DiscreetReplacement"
                 IsVisible="{TemplateBinding IsDiscreetContentVisible}">
            <Viewbox Name="PART_Icon">
              <PathIcon Data="{StaticResource incognito_pathicon}" Opacity="0.15" />
            </Viewbox>
            <TextBlock Name="PART_DiscreetText"
                       Text="{TemplateBinding DiscreetText}" />
          </Panel>
        </Panel>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="controls|DiscreetContentControl /template/ Viewbox#PART_Icon">
    <Setter Property="Margin" Value="25" />
  </Style>

  <!-- Transitions -->
  <Style Selector="controls|DiscreetContentControl /template/ ContentPresenter#PART_Content,
                   controls|DiscreetContentControl /template/ Panel#PART_DiscreetReplacement">
    <Setter Property="Transitions">
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:0.3" Easing="{StaticResource FluentEasing}" />
      </Transitions>
    </Setter>
  </Style>
  <Style Selector="controls|DiscreetContentControl /template/ ContentPresenter#PART_Content[IsVisible=True],
                   controls|DiscreetContentControl /template/ Panel#PART_DiscreetReplacement[IsVisible=True]">
    <Setter Property="Opacity" Value="1" />
  </Style>
  <Style Selector="controls|DiscreetContentControl /template/ ContentPresenter#PART_Content[IsVisible=False],
                   controls|DiscreetContentControl /template/ Panel#PART_DiscreetReplacement[IsVisible=False]">
    <Setter Property="Opacity" Value="0" />
  </Style>

  <Style Selector="controls|DiscreetContentControl.monoSpaced">
    <Setter Property="FontFamily" Value="{StaticResource MonospacedFont}" />
  </Style>
  <Style Selector="controls|DiscreetContentControl.monoSpacedDiscreetReplacement /template/ TextBlock#PART_DiscreetText">
    <Setter Property="FontFamily" Value="{StaticResource MonospacedFont}" />
  </Style>

  <!-- Icon discreet mode -->
  <Style Selector="controls|DiscreetContentControl[DiscreetReplacementMode=Icon] /template/ TextBlock#PART_DiscreetText">
    <Setter Property="IsVisible" Value="False" />
  </Style>
  <Style Selector="controls|DiscreetContentControl[DiscreetReplacementMode=Icon] /template/ Viewbox#PART_Icon">
    <Setter Property="IsVisible" Value="True" />
  </Style>

  <!-- Text discreet mode -->
  <Style Selector="controls|DiscreetContentControl[DiscreetReplacementMode=Text] /template/ TextBlock#PART_DiscreetText">
    <Setter Property="IsVisible" Value="True" />
  </Style>
  <Style Selector="controls|DiscreetContentControl[DiscreetReplacementMode=Text] /template/ Viewbox#PART_Icon">
    <Setter Property="IsVisible" Value="False" />
  </Style>
</Styles>
